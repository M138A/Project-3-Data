<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<GridPane fx:controller="Data_Project.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label GridPane.columnIndex="1" text="Username"/>
    <TextField fx:id="userField" GridPane.columnIndex="2" ></TextField>
    <Label GridPane.columnIndex="1" GridPane.rowIndex="2" text="Password"/>
    <PasswordField  fx:id="passField"  GridPane.columnIndex="2" GridPane.columnSpan="1" GridPane.rowIndex="2" />
    <Button fx:id="submitButton" GridPane.columnIndex="2" text="Log in" GridPane.rowIndex="3" GridPane.columnSpan="2" onAction="#submitForm"/>
</GridPane>